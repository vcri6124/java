package packet2;

import packet4.CPU;
import packet3.HardDisk;


public class PC{
	private HardDisk HD;
	private CPU cpu;

public PC(){
	
}  //空构造方法
public PC(HardDisk hd,CPU cu){
   	this.HD=hd;
   	this.cpu=cu;
   }
public void setCPU(CPU c){
cpu=c;
}
public void setHardDisk(HardDisk h){
HD=h;
}
public void show(){
System.out.println("CPU的速度是"+cpu.getSpeed());
System.out.println("硬盘的容量是"+HD.getAmount());
}
}
